<Window x:Class="TodoListCSharp.views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoListCSharp.views"
        xmlns:us="clr-namespace:TodoListCSharp.controls"
        mc:Ignorable="d"
        Title="SettingWindow" 
        MinHeight="700" 
        MinWidth="520" 
        Height="700" 
        Width="520"
        Closed="SettingWindow_OnClosed">
    <StackPanel Background="#E8E8E8">
        <us:Titlebar x:Name="titlebar"
                     Title="Setting" 
                     Padding="10, 0" 
                     Background="White" 
                     />
        <!--Display Mode Draw-->
        <StackPanel Background="White">
            <Label Padding="10, 20, 10, 10" FontFamily="Inter" FontSize="20">Display Mode</Label>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Grid Margin="40, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Width="192" Height="108">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/resources/DesktopMode.png"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Label Grid.Row="1" 
                           HorizontalAlignment="Center"
                           FontSize="15">Desktop Mode</Label>
                </Grid>
                <Grid Margin="40, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Rectangle Grid.Row="0" Width="192" Height="108">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/resources/SideMode.png"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Label Grid.Row="1" 
                           HorizontalAlignment="Center"
                           FontSize="15">Side Mode</Label>
                </Grid>
            </StackPanel>
        </StackPanel>
        <StackPanel Background="White" Margin="0, 20">
            <us:MenuItem IconSource="/resources/icons/info.png"
                         Text="General Setting"
                         x:Name="InfoMenuItem"/>
            <us:MenuItem IconSource="/resources/icons/bulleted.png" 
                         Text="Appearance Setting"
                         x:Name="AppearanceMenuItem"/>
            <us:MenuItem IconSource="/resources/icons/backup.png" 
                         Text="Backup Setting"
                         x:Name="BackupMenuItem"/>
            <us:MenuItem IconSource="/resources/icons/about.png" Text="About Setting"></us:MenuItem>
        </StackPanel>
    </StackPanel>
</Window>

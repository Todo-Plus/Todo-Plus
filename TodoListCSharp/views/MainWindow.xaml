<Window x:Class="TodoListCSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoListCSharp"
        xmlns:us="clr-namespace:TodoListCSharp.controls"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="850" MinWidth="379" Height="850" Width="300">
    <StackPanel>
        <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Background="Transparent">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <StackPanel Style="{StaticResource MWTypeContainer}">
                    <Label Style="{StaticResource MWTypeChosedFont}">Todo</Label>
                    <Label Style="{StaticResource MWTypeUnderlineChosed}"></Label>
                </StackPanel>
                <StackPanel Style="{StaticResource MWTypeContainer}">
                    <Label Style="{StaticResource MWTypeUnchosedFont}">Done</Label>
                    <Label Style="{StaticResource MWTypeUnderlineUnchosed}"></Label>
                </StackPanel> 
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10, 0">
                <StackPanel Orientation="Horizontal" Width="Auto">
                    <us:IconButton 
                        Style="{StaticResource MWTopButtonStyle}" 
                        ImageSource="/resources/icons/locked.png"
                        HoverIcon="/resources/icons/locked.png"
                        IconDiameter="30"
                        CircleDiameter="32"
                        Click="OpenSettingWindow"/>
                    <us:IconButton 
                        Style="{StaticResource MWTopButtonStyle}" 
                        ImageSource="/resources/icons/setting.png"
                        HoverIcon="/resources/icons/setting.png"
                        IconDiameter="30"
                        CircleDiameter="32"/>
                    <us:IconButton 
                        Style="{StaticResource MWTopButtonStyle}" 
                        ImageSource="/resources/icons/add.png"
                        HoverIcon="/resources/icons/add.png"
                        IconDiameter="30"
                        CircleDiameter="32"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <ListBox 
            HorizontalAlignment="Stretch" 
            Name="todoList"  
            ItemTemplate="{StaticResource MWTodoListBoxItem}" 
            Height="Auto">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </StackPanel> 
</Window> 
